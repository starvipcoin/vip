<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.devlomi.fireapp.activities.AgreePrivacyPolicyActivity"
    android:background="@color/bgColor">

    <TextView
        android:id="@+id/appname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="64dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:visibility="gone"
        android:textAllCaps="true"
        android:textSize="48sp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/image_app_ic"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/appname"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher_foreground" />


    <ScrollView
        android:layout_below="@id/image_app_ic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_agree"
        android:layout_marginBottom="24dp"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_privacy_policy_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp" />


            <CheckBox
                android:text="@string/agree"
                android:id="@+id/chb_agree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_agree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/btn_rounded_bg_blue"
        android:enabled="false"
        android:padding="12dp"
        android:text="@string/agree_and_continue"
        android:textColor="@color/white" />

</RelativeLayout>
