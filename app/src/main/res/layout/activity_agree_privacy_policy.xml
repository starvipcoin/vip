<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.devlomi.fireapp.activities.AgreePrivacyPolicyActivity"
    android:background="@color/bgColor">

    <TextView
        android:layout_width="match_parent"
        android:text="@string/app_name"
        android:gravity="center"
        android:id="@+id/appname"
        android:textSize="48sp"
        android:layout_marginTop="28dp"
        android:textAllCaps="true"
        android:layout_marginBottom="64dp"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/appname"
        android:src="@mipmap/ic_launcher_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:layout_above="@id/btn_agree"
        android:text="@string/agree_privacy"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/privacytxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"
        android:text="@string/privacy_policy"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_agree"
        android:padding="8dp"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="48dp"
        android:layout_width="wrap_content"
        android:layout_above="@id/privacytxt"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/agree_and_continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</RelativeLayout>
